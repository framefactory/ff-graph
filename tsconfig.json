{
    "compilerOptions": {
        "composite": true,
        "target": "ES6",
        "module": "CommonJS",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,

        "outDir": "dist/exports",
        "rootDir": "src",

        "baseUrl": ".",
        "paths": {
            "@ff/core/*": [ "../ff-core/src/*" ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        { "path": "../ff-core" }
    ]
}
