{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,

        "outDir": "../dist/test",
        "rootDir": ".",

        "baseUrl": ".",
        "paths": {
            "@ff/graph/*": [ "../src/*" ],
            "@ff/core/*": [ "../../ff-core/src/*" ]
        }
    },
    "include": [
        "**/*"
    ],
    "references": [
        { "path": ".." },
        { "path": "../../ff-core" }
    ]
}
